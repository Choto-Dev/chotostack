{
  "name": "@choto/stack-cli",
  "version": "0.0.1",
  "description": "CLI for chotostack project.",
  "type": "module",
  "scripts": {
    "build": "unbuild",
    "check-types": "tsc --noEmit",
    "cli": "node ./dist/index.mjs",
    "lint": "biome check --write .",
    "pub:link": "npm unlink -g && npm link",
    "start": "pnpm build && pnpm cli"
  },
  "bin": {
    "stack-cli": "./dist/index.mjs"
  },
  "keywords": [
    "chotostack",
    "cli"
  ],
  "author": "Rifat Khan",
  "license": "MIT",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@choto/typescript-config": "workspace:*",
    "@types/node": "^24.5.2",
    "ts-morph": "^27.0.0",
    "tsx": "^4.20.6",
    "type-fest": "^5.0.1",
    "typescript": "catalog:",
    "unbuild": "^3.6.1"
  },
  "dependencies": {
    "@choto/stack-utils": "workspace:*",
    "commander": "^14.0.1",
    "consola": "^3.4.2",
    "tree-kill": "^1.2.2"
  }
}
